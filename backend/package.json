{
  "name": "fuel-order-backend",
  "version": "1.0.0",
  "description": "Backend API for Fuel Order Management System",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .ts",
    "seed": "ts-node src/scripts/seedSuperAdmin.ts",
    "seed:admins": "ts-node src/scripts/seedAdmins.ts",
    "seed:all": "ts-node src/scripts/seedAllRoles.ts",
    "seed:super": "ts-node src/scripts/seedSuperAdmin.ts",
    "seed:checkpoints": "ts-node --transpile-only src/scripts/seedCheckpoints.ts",
    "setup-driver-credentials": "ts-node src/scripts/setupDriverCredentials.ts",
    "archival:test": "ts-node src/scripts/testArchival.js",
    "archival:run": "ts-node src/scripts/testArchival.js --execute",
    "archival:stats": "ts-node src/scripts/testArchival.js --stats-only",
    "relink-yard-fuel": "ts-node src/scripts/relink-pending-yard-fuel.ts",
    "migrate:fuel-logic": "ts-node src/scripts/migrateFuelCalculationLogic.ts",
    "migrate:lpo-dates": "ts-node src/scripts/migrateActualDateForLPOs.ts",
    "verify:balance": "ts-node src/scripts/verifyBalanceCalculation.ts",
    "db:clear": "ts-node src/scripts/clearDatabase.ts",
    "db:clear:force": "ts-node src/scripts/clearDatabase.ts --force",
    "import:excel": "ts-node --transpile-only src/scripts/importExcelData.ts",
    "import:excel:dry": "ts-node --transpile-only src/scripts/importExcelData.ts --dry-run"
  },
  "keywords": [
    "fuel",
    "order",
    "management",
    "logistics",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
